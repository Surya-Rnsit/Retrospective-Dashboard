<body style="background-color:#C0C0C0;">
    <nav class="navbar navbar-light -lighbgt justify-content-start " style="background-color: #989898;">
        <span class="navbar-brand mb-0 h1 navbar-brand" style="color:black"><i class="fa fa-calendar-check-o" aria-hidden="true"></i><a style="color:black" href="http://localhost:3000/"> Retrospective Dashboard</a></span>
        <div class="dropdown show">
            <a class="btn btn-danger dropdown-toggle " href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                All Sprints
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <% @allsprints.each do |sprint| %>
                <a class="dropdown-item" href="http://localhost:3000/dashboards/<%=sprint.id%>"><%=sprint.name%></a>
                
                <form method="post" action="/dashboards/destroySprint/<%=sprint.id%>" style='display: inline'>
                    <div class="col text-center">
                        <input class="btn btn-danger btn-sm" data-confirm="Are you sure you want to delete?" type="submit" value="Delete" />
                    </div>
                </form>
                <%end%>
            </div>
        </div>
        <button type="button" class="btn btn-success " data-toggle="modal" data-target="#createsprint">Add New Sprint</button>
        <div class="modal fade" id="createsprint" tabindex="-1" role="dialog" aria-labelledby="createsprint" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createsprint">Add New Sprint</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <%= form_with url: "/createSprint" do |form| %>
                        <div>
                            <%= form.text_area(:name,{:class => 'form-control'})%>
                        </div>
                        <br>
                        <div>
                            <%= form.submit({:class=> 'btn btn-primary'})  %>
                        </div>
                        <% end %>
                        <br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <br>
    <div class="container">

        <h1 style=" text-align: center;"><br>HELLO,<br><br>WELCOME TO THE DASHBOARD !! <br><br>Please add a new Sprint or checkout the existing Sprints from the dropdown menu.</h1>

    </div>
<!-- Modal Dialog -->
<div class="modal fade" id="confirmDelete" role="dialog" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Delete Parmanently</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure about this ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirm">Delete</button>
      </div>
    </div>
  </div>
</div>

</body>
<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>